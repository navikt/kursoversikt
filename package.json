{
    "name": "kursoversikt",
    "version": "0.1.0",
    "private": true,
    "homepage": "/kursoversikt",
    "dependencies": {
        "@navikt/ds-css": "^8.1.0",
        "@navikt/ds-icons": "^3.4.3",
        "@navikt/ds-react": "^8.1.0",
        "@navikt/nav-dekoratoren-moduler": "^3.6.1",
        "@sentry/browser": "^6.17.6",
        "classnames": "^2.3.1",
        "core-js": "^3.20.2",
        "prop-types": "^15.8.1",
        "react": "^18.1.0",
        "react-app-polyfill": "^3.0.0",
        "react-dom": "^18.1.0",
        "react-loading-skeleton": "^3.1.0",
        "react-router-dom": "^6.3.0",
        "unorm": "^1.6.0"
    },
    "scripts": {
        "clean": "rm -rf ./build/* && mkdir -p ./build",
        "watch": "npm-run-all clean --parallel watch:*",
        "watch:tsc": "tsc --watch",
        "watch:statics": "cp public/* build/",
        "watch:esbuild": "node esbuild.mjs --watch",
        "watch:server": "cd server && MOCK=true npm-run-all start",
        "build": "npm-run-all clean --parallel build:*",
        "build:statics": "cp public/* build/",
        "build:tsc": "tsc",
        "build:esbuild": "node esbuild.mjs",
        "test": "jest",
        "lint": "eslint --ext ts,tsx .",
        "format": "prettier --write 'src/**/*.{ts,js,less,tsx}'",
        "docker:build": "docker build -t kursoversikt .",
        "docker:start": "docker run -p 3000:3000 kursoversikt"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/node": "^17.0.35",
        "@types/react": "^18.0.9",
        "@types/react-dom": "^18.0.4",
        "@types/react-router-dom": "^5.3.3",
        "esbuild": "^0.14.39",
        "esbuild-plugin-less": "^1.1.6",
        "npm-run-all": "*",
        "prettier": "2.6.2",
        "typescript": "^4.6.4"
    }
}
